@{
    if(IsPost){
        var db = Database.Open("IntranetConnection");
        var sql = @"UPDATE 
                    dbo.COMP_ANTICIPADOS_CAB
                    SET
                        OBSERVACIONES = @0,
                        STATUS = @1,
                        OBSERVACIONES_STATUS = @2,
                        FECHA_STATUS = @3,
                        STATUS_CTRL_POR = @4,
                        FECHA_CTRL_FISICO = @5
                    WHERE
                    dbo.COMP_ANTICIPADOS_CAB.IDCAB = @6";

        var idcab = Request["row_num"];
        var observaciones = Request["observaciones"];
        var status = Request["tipoctrl"];
        var observstatus = Request["observacionesctrl"];
        var fecha_status = DateTime.Now;
        var fechactrlfisico = Request["fechactrlfisico"].AsDateTime();
        var statusctrlpor = "Andrea";
        Response.Write(status);
        db.Execute(sql, observaciones, status,observstatus, fecha_status,statusctrlpor, fechactrlfisico, idcab);
    }
}
